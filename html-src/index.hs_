H.div ! A.id "home" $ do
    h1 "Tags"
    ul ! class_ "tags" $ do
      "{% for tag in site.tags %}"
      li $ do
        a ! href "/tags/{{ tag | first | slugize }}.html"
          $ "{{ tag | first }} ({{ tag | last | size }})"
      "{% endfor %}"
    h1 "Posts"
    ul ! class_ "posts" $ do
      "{% for post in site.posts %}"
      li $ do
        H.span "{{ post.date | date_to_string }}"
        "Â»"
        a ! href "{{ post.url }}" $ "{{ post.title }}"
      "{% endfor %}"

